[bar/mybar]
monitor = ${env:MONITOR:eDP-1-1}
bottom = true
override-redirect = true
wm-restack = i3
width = 100%
height = 35
background = #00000000
foreground = #424242
padding = 1
module-margin = 3
font-0 = DejaVuSansMono:size=15
font-1 = DejaVuSansMono:size=15
font-2 = DejaVuSansMono:size=15
font-3 = DejaVuSansMono:size=15
modules-left = i3
modules-right = mpd volume wireless-network cpu battery date

[module/i3]
type = internal/i3
ws-icon-0 = 1
ws-icon-1 = 2
ws-icon-2 = 3
ws-icon-3 = 4
ws-icon-4 = 5
ws-icon-5 = 6
ws-icon-6 = 7
ws-icon-7 = 8
ws-icon-8 = 9
ws-icon-9 = 10
format = <label-mode>
label-mode = %mode%
label-mode-padding = 2
label-mode-background = #00000000
label-focused = %name%
label-focused-foreground = #bdbdbd
label-focused-background = #33000000
label-unfocused = %name%

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
format-online = <label-song> <bar-progress>
label-song = %artist% - %title%
bar-progress-width = 50
bar-progress-indicator = >
bar-progress-fill = ─
bar-progress-empty =

[module/volume]
type = internal/volume
mapped = true
format-volume =  <label-volume>
format-muted = <label-muted>
label-volume = %percentage%%
label-volume-foreground = #424242
label-muted = muted
label-muted-foreground = #424242
bar-volume-width = 10
bar-volume-foreground-0 = #424242
bar-volume-indicator = |
bar-volume-fill = ─
bar-volume-empty = ─
bar-volume-empty-foreground = #000000

[module/wireless-network]
type = internal/network
interface = wlp2s0
interval = 2
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = %essid% %signal% %upspeed% %downspeed%
label-connected-foreground = #424242
label-disconnected = no connection
label-disconnected-foreground = #424242

;[module/wired-network]
;type = internal/network
;interface = enp0s20f0u1c4i2
;interval = 2
;format-connected = <label-connected>
;format-disconnected = <label-disconnected>
;label-connected = %linkspeed% %upspeed% %downspeed%
;label-connected-foreground = #424242
;label-disconnected = no connection
;label-disconnected-foreground = #424242

[module/cpu]
type = internal/cpu
interval = 2
format = <label> <bar-load>
label = %percentage%%
bar-load-width = 10
bar-load-empty =
bar-load-fill = ─
bar-load-indicator = |

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
format-charging = <bar-capacity> <label-charging>
format-discharging = <bar-capacity> <label-discharging>
label-charging = %percentage%%
label-discharging = %percentage%%
bar-capacity-width = 10
bar-capacity-empty =
bar-capacity-fill = ─
bar-capacity-indicator = |

[module/date]
type = internal/date
interval = 5
date = "%d-%m-%Y"
time = %H:%M:%S
label = %date% %time%
