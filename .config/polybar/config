[bar/mybar]
monitor = ${env:MONITOR:eDP-1-1}
bottom = true
override-redirect = false
wm-restack = i3
width = 100%
height = 35
background = #33000000
foreground = #bdbdbd
padding = 1
module-margin = 1
font-0 = DejaVuSansMono:size=15
font-1 = DejaVuSansMono:size=15
font-2 = DejaVuSansMono:size=15
font-3 = DejaVuSansMono:size=15
modules-left = i3
modules-center = mpd
modules-right = pulseaudio wireless-network battery date

[module/i3]
type = internal/i3
pin-workspaces = true
ws-icon-0 = 1;.
ws-icon-1 = 2;.
ws-icon-2 = 3;.
ws-icon-3 = 4;.
ws-icon-4 = 5;.
ws-icon-5 = 6;.
ws-icon-6 = 7;.
ws-icon-7 = 8;.
ws-icon-8 = 9;.
ws-icon-9 = 10;.
format = <label-state>
label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = #bdbdbd
label-mode-background = #00000000
label-focused = %name%
label-focused-foreground = #bdbdbd
label-focused-background = #66000000
label-focused-padding = 2
label-unfocused = %name%
label-unfocused-padding = 2

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
format-online = <label-song> <bar-progress>
label-song = %artist% - %title%
bar-progress-width = 20
bar-progress-indicator =
bar-progress-fill =
bar-progress-empty =

;[module/volume]
;type = internal/volume
;mapped = true
;format-volume = <label-volume> <bar-volume>
;format-muted = <label-muted>
;label-volume = VOL
;bar-volume-foreground = #bdbdbd
;label-muted = muted
;label-muted-foreground = #bdbdbd
;bar-volume-width = 10
;bar-volume-foreground-0 = #bdbdbd
;bar-volume-indicator = |
;bar-volume-fill = ─
;bar-volume-empty = ─
;bar-volume-empty-foreground = #bdbdbd

[module/pusleaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
format-volume = <label-volume> <bar-volume>
format-muted = <label-muted>
label-volume = VOL
bar-volume-foreground = #bdbdbd
label-muted = muted
label-muted-foreground = #bdbdbd
bar-volume-width = 10
bar-volume-foreground-0 = #bdbdbd
bar-volume-indicator = |
bar-volume-fill = ─
bar-volume-empty = ─
bar-volume-empty-foreground = #bdbdbd

[module/wireless-network]
type = internal/network
interface = wlp2s0
interval = 2
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = %essid%
label-connected-foreground = #bdbdbd
label-disconnected = no connection
label-disconnected-foreground = #bdbdbd

;[module/wired-network]
;type = internal/network
;interface = enp0s20f0u1c4i2
;interval = 2
;format-connected = <label-connected>
;format-disconnected = <label-disconnected>
;label-connected = %linkspeed% %upspeed% %downspeed%
;label-connected-foreground = #424242
;label-disconnected = no connection
;label-disconnected-foreground = #424242

;[module/cpu]
;type = internal/cpu
;interval = 2
;format = <label>
;label = CPU %percentage%%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
format-charging = <bar-capacity> <label-charging>
format-discharging = <bar-capacity> <label-discharging>
label-charging = %percentage%%
label-discharging = %percentage%%
bar-capacity-width = 10
bar-capacity-empty = .
bar-capacity-fill = .
bar-capacity-indicator = :

[module/date]
type = internal/date
interval = 5
date = "%d-%m-%Y"
time = %H:%M
label = %time%
